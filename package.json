{
  "name": "yarn-audit-fix",
  "version": "3.2.13",
  "private": false,
  "description": "Apply `npm audit fix` logic to `yarn.lock`",
  "bin": {
    "yarn-audit-fix": "target/es5/cli.js"
  },
  "source": "src/main/ts/index.ts",
  "main": "target/es5/index.js",
  "types": "typings/index.d.ts",
  "typescript": {
    "definition": "typings/index.d.ts"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.+(js|ts)'",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "jest": "jest -w 1 --config=jest.config.json",
    "test:unit": "yarn jest",
    "test:integration": "node ./target/es5/cli.js --package-lock-only --audit-level=moderate",
    "test:integration-build": "yarn build:es5 && yarn test:integration",
    "test": "yarn lint && yarn test:unit && yarn test:integration",
    "clean": "rimraf target typings flow-typed buildcache docs coverage",
    "build": "yarn clean && yarn build:es5 && yarn build:es6 && yarn build:ts && yarn build:libdef && yarn docs",
    "build:es5": "mkdirp target/es5 && tsc -p tsconfig.es5.json",
    "build:es6": "mkdirp target/es6 && tsc -p tsconfig.es6.json",
    "build:ts": "cpy src/main/ts/ target/ts/",
    "build:libdef": "libdefkit --tsconfig=tsconfig.es5.json --tsconfig=tsconfig.es6.json",
    "test:report": "yarn test && yarn push:report",
    "push:report": "yarn coveralls:push",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls || exit 0",
    "docs": "typedoc --readme README.md --tsconfig tsconfig.json src/main",
    "uglify": "for f in $(find target -name '*.js'); do short=${f%.js}; terser -c -m -o $short.js -- $f; done",
    "postupdate": "yarn && yarn build && yarn test",
    "publish:beta": "npm publish --no-git-tag-version --tag beta",
    "publish:rc": "npm publish --no-git-tag-version --tag rc",
    "rm-npm-bin": "rimraf node_modules/.bin/npm node_modules/.bin/npx",
    "release": "yarn rm-npm-bin && npx -p @qiwi/semrel-toolkit semrel -e @qiwi/semrel-config"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/antongolub/yarn-audit-fix.git"
  },
  "keywords": [
    "yarn-audit-fix",
    "yarn audit fix",
    "audit",
    "vulnerability",
    "security"
  ],
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "typings",
    "flow-typed",
    "custom-typings"
  ],
  "author": "Anton Golub <golub.anton@gmail.com>",
  "license": "MIT",
  "workspaces0": [
    "packages/*"
  ],
  "dependencies": {
    "@types/bash-glob": "^2.0.0",
    "@types/find-cache-dir": "^3.2.0",
    "@types/fs-extra": "^9.0.4",
    "@types/npm": "^2.0.31",
    "bash-glob": "^2.0.0",
    "bash-path": "^2.0.1",
    "chalk": "^4.1.0",
    "find-cache-dir": "^3.3.1",
    "fs-extra": "^9.0.1",
    "minimist": "^1.2.5",
    "npm": "^7.0.2",
    "pkg-dir": "^5.0.0",
    "synp": "^1.9.4",
    "tslib": "^2.0.3"
  },
  "devDependencies": {
    "@qiwi/libdefkit": "^2.1.5",
    "@swissquote/crafty-preset-jest": "^1.13.7",
    "@types/jest": "^26.0.17",
    "@types/node": "^14.14.10",
    "coveralls": "^3.1.0",
    "cpy-cli": "^3.1.1",
    "inside-out-promise": "^2.1.2",
    "jest": "^26.6.3",
    "mkdirp": "^1.0.4",
    "terser": "^5.5.1",
    "ts-jest": "^26.4.4",
    "eslint": "^7.15.0",
    "eslint-config-qiwi": "^1.10.0",
    "eslint-config-prettier": "^7.0.0",
    "typedoc": "^0.20.0",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typescript": "4.1.3",
    "prettier": "^2.2.1"
  }
}
